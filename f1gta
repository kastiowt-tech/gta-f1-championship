        // Навигация между страницами
        document.addEventListener('DOMContentLoaded', function() {
            const navLinks = document.querySelectorAll('.nav-link');
            const pages = document.querySelectorAll('.page');
            
            // Создаем неоновый фон
            createNeonBackground();
            
            // Функция переключения страниц
            function showPage(pageId) {
                pages.forEach(page => {
                    page.classList.remove('active');
                });
                
                const activePage = document.getElementById(pageId);
                if (activePage) {
                    activePage.classList.add('active');
                }
                
                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('data-page') === pageId) {
                        link.classList.add('active');
                    }
                });
                
                // Плавная прокрутка к верху
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
                
                // Обновляем URL
                history.pushState(null, null, `#${pageId}`);
            }
            
            // Обработчик кликов по навигации
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const pageId = this.getAttribute('data-page');
                    showPage(pageId);
                });
            });
            
            // Обработчик кнопок
            document.querySelectorAll('[data-page]').forEach(btn => {
                if (btn.classList.contains('btn')) {
                    btn.addEventListener('click', function(e) {
                        if (this.hasAttribute('href')) {
                            e.preventDefault();
                        }
                        const pageId = this.getAttribute('data-page');
                        if (pageId) {
                            showPage(pageId);
                        }
                    });
                }
            });
            
            // Обработка хэша при загрузке
            function handleHashChange() {
                const hash = window.location.hash.substring(1);
                if (hash && document.getElementById(hash)) {
                    showPage(hash);
                } else {
                    showPage('home');
                }
            }
            
            window.addEventListener('hashchange', handleHashChange);
            handleHashChange();
            
            // Инициализация страницы результатов
            initResultsPage();
            
            // Анимация элементов при скролле
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.animationPlayState = 'running';
                    }
                });
            }, { threshold: 0.1 });
            
            // Наблюдаем за элементами с анимациями
            const animatedElements = document.querySelectorAll('.driver-item, .team-item, .team-card, .timeline-item, .stat-card');
            animatedElements.forEach(el => {
                el.style.animationPlayState = 'paused';
                observer.observe(el);
            });
        });

        // Инициализация страницы результатов
        function initResultsPage() {
            const raceSelector = document.getElementById('raceSelector');
            const raceResults = document.getElementById('raceResults');
            
            // Создаем кнопки выбора гонок
            const races = [
                { id: 'redwood-sprint', name: 'Redwood Ring Sprint' },
                { id: 'redwood-race', name: 'Redwood Ring Race' },
                { id: 'airport-race', name: 'Airport Race' },
                { id: 'vinewood-gp', name: 'Vinewood GP Race' },
                { id: 'fra-sprint', name: 'FRA Sprint' },
                { id: 'fra-race', name: 'FRA Race' },
                { id: 'gpoe-race', name: 'GPOE Race' },
                { id: 'sandy-circuit', name: 'Sandy Circuit Race' },
                { id: 'airport-ring', name: 'Airport Ring Race' }
            ];
            
            races.forEach((race, index) => {
                const button = document.createElement('button');
                button.className = 'race-btn' + (index === 0 ? ' active' : '');
                button.textContent = race.name;
                button.dataset.raceId = race.id;
                
                button.addEventListener('click', function() {
                    // Убираем активный класс у всех кнопок
                    document.querySelectorAll('.race-btn').forEach(btn => {
                        btn.classList.remove('active');
                    });
                    
                    // Добавляем активный класс текущей кнопке
                    this.classList.add('active');
                    
                    // Показываем результаты выбранной гонки
                    showRaceResults(race.id);
                });
                
                raceSelector.appendChild(button);
            });
            
            // Показываем первую гонку по умолчанию
            if (races.length > 0) {
                showRaceResults(races[0].id);
            }
        }

        // Показать результаты гонки
        function showRaceResults(raceId) {
            const raceResults = document.getElementById('raceResults');
            const race = racesData[raceId];
            
            if (!race) return;
            
            let html = `
                <div class="race-header">
                    <h3 class="race-title">${race.title}</h3>
                    <div class="race-date">${race.date}</div>
                </div>
                <table class="results-table">
                    <thead>
                        <tr>
                            <th>Позиция</th>
                            <th>Пилот</th>
                            <th>Команда</th>
                            <th>Очки</th>
                            <th>Статус</th>
                        </tr>
                    </thead>
                    <tbody>
            `;
            
            race.results.forEach(result => {
                let positionClass = 'pos-other';
                if (result.position === 1) positionClass = 'pos-1';
                else if (result.position === 2) positionClass = 'pos-2';
                else if (result.position === 3) positionClass = 'pos-3';
                
                // Получаем цвет команды для пилота
                const teamColorClass = `team-${result.teamColor}`;
                
                html += '<tr>';
                
                if (typeof result.position === 'number') {
                    html += `<td><span class="position ${positionClass}">${result.position}</span></td>`;
                } else {
                    html += `<td><span class="${result.position.toLowerCase()}-badge">${result.position}</span></td>`;
                }
                
                html += `<td><strong class="${teamColorClass}">${result.name}</strong>`;
                if (result.fastest) {
                    html += ' <span class="fastest-lap-badge">Быстрый круг</span>';
                }
                html += '</td>';
                
                html += `<td><span class="${teamColorClass}">${result.team}</span></td>`;
                
                if (result.points) {
                    html += `<td><strong>${result.points}</strong></td>`;
                } else {
                    html += '<td>-</td>';
                }
                
                if (result.status === 'finished') {
                    html += '<td>Финишировал</td>';
                } else if (result.status === 'dnf') {
                    html += `<td>Не финишировал<br><small>${result.reason}</small></td>`;
                } else if (result.status === 'dsq') {
                    html += `<td>Дисквалификация<br><small>${result.reason}</small></td>`;
                }
                
                html += '</tr>';
            });
            
            html += '</tbody></table>';
            raceResults.innerHTML = html;
        }
    </script>
</body>
</html>
