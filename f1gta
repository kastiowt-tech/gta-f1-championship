    <script>
        // Создание неонового фона
        function createNeonBackground() {
            const background = document.getElementById('neonBackground');
            
            // Создаем неоновые линии
            for (let i = 0; i < 15; i++) {
                const line = document.createElement('div');
                line.className = 'neon-line';
                line.style.top = `${Math.random() * 100}%`;
                line.style.width = `${30 + Math.random() * 70}%`;
                line.style.left = `${Math.random() * 20}%`;
                line.style.animationDuration = `${10 + Math.random() * 20}s`;
                line.style.animationDelay = `${Math.random() * 5}s`;
                background.appendChild(line);
            }
            
            // Создаем неоновые круги
            const colors = ['#e10600', '#ff4444', '#6a0dad', '#00ff9d', '#ff8c00', '#0000cc', '#ffd700'];
            
            for (let i = 0; i < 8; i++) {
                const circle = document.createElement('div');
                circle.className = 'neon-circle';
                
                const size = 100 + Math.random() * 200;
                const posX = Math.random() * 100;
                const posY = Math.random() * 100;
                const color = colors[Math.floor(Math.random() * colors.length)];
                
                circle.style.width = `${size}px`;
                circle.style.height = `${size}px`;
                circle.style.left = `${posX}%`;
                circle.style.top = `${posY}%`;
                circle.style.backgroundColor = color;
                circle.style.animationDelay = `${Math.random() * 3}s`;
                
                background.appendChild(circle);
            }
        }

        // Данные гонок
